{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"./src/**",
			"./test/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"suspicious": {
				"noDoubleEquals": "info"
			},
			"style": {
				"noParameterAssign": "info",
				"useImportType": "off",
				"noNonNullAssertion": "warn"
			}
		}
	},
	"javascript": {
		"linter": {
			"enabled": true
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "none"
		}
	}
}

